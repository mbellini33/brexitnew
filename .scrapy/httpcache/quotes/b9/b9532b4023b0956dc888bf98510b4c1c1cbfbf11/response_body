    <script type="text/javascript">

                function checkCharCount(noteControlId)
                {
                    if(document.getElementById(noteControlId)        != null && 
                       document.getElementById('spRemainingCharCount') != null)
                    {
                        var maxChars = 1000;

                        if(document.getElementById(noteControlId).value.length > maxChars)
                        {
                            document.getElementById(noteControlId).value = document.getElementById(noteControlId).value.substring(0,maxChars);
                        }
                        
                        document.getElementById('spRemainingCharCount').innerHTML = 
                                (maxChars - document.getElementById(noteControlId).value.length).toString();

                       if((maxChars - document.getElementById(noteControlId).value.length) != 1)       
                            document.getElementById('spPlural').style.display = "";
                       else
                            document.getElementById('spPlural').style.display = "none";

                        document.getElementById('spRemainingCharsCounter').style.visibility="visible";
                   };
                };
                
                function clearValues()
                {
                    if(document.getElementById("fsContactElements") != null)
                    {
                        var inputElements = document.getElementById("fsContactElements").getElementsByTagName("input");
                        var inputElementsLength = inputElements != null ? inputElements.length : 0;
                        if(inputElementsLength > 0)
                        {
                            
                            for(var i = 0; i<inputElementsLength; i++)
                            {
                                if(inputElements[i] != null && 
                                   inputElements[i].type != null && 
                                   inputElements[i].type.toLowerCase() == "text")
                                   {
                                        inputElements[i].value = "";
                                   }
                            }
                        }

                        var textareaElements = document.getElementById("fsContactElements").getElementsByTagName("textarea");
                        var textareaElementsLength = textareaElements != null ? textareaElements.length : 0;
                        if(textareaElementsLength > 0)
                        {
                            
                            for(var i = 0; i<textareaElementsLength; i++)
                            {
                               if(textareaElements[i] != null)
                               {
                                    textareaElements[i].value = "";
                               }
                            }
                        }
                    }
                } 
    </script>
